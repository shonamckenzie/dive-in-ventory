<form method="post" action="/products/<%= @product.id %>" >

  <label for="name-field">Name:</label>
  <input type="text" name="name" id="name-field" value="<%= @product.name.capitalize %>" />

  <label for="description-field">Description:</label>
  <input type="text" name="description" id="description-field" value="<%= @product.description %>" />

  <label for="quantity-field">Quantity:</label>
  <input type="number" name="quantity" id="quantity-field" value="<%= @product.quantity %>" />

  <label for="buy-cost-field">Buy Cost:</label>
  <input type="number" name="buy_cost" id="buy-cost-field" value="<%= @product.buy_cost %>" />

  <label for="sell-price-field">Sell Price:</label>
  <input type="number" name="sell_price" id="sell-price-field" value="<%= @product.sell_price %>" />

  <label for="manufacturer_select">Select Manufacturer:</label>
  <select name="manufacturer_id" id="manufacturer_select">
    <% @manufacturer.each do |manufacturer| %>
    <option value="<%= manufacturer.id %>"<%= "selected" if @product.manufacturer_id ==manufacturer.id %>><%= manufacturer.name.capitalize %></option>
    <%end%>
  </select>

  <input type="submit" value="Edit Product">
</form>
